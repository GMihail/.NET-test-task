@{
    ViewData["Title"] = "Главная";
}

<div class="text-center hero-section">
    <h1 class="display-4">Добро пожаловать в наш магазин!</h1>
    <p class="lead">Лучшие товары по выгодным ценам</p>
    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">Смотреть товары</a>

    <div class="mt-5 features">
        <div class="row">
            <div class="col-md-4">
                <h3>Быстрая доставка</h3>
                <p>Доставка по всей России за 1-3 дня</p>
            </div>
            <div class="col-md-4">
                <h3>Гарантия качества</h3>
                <p>Все товары проходят проверку</p>
            </div>
            <div class="col-md-4">
                <h3>Поддержка 24/7</h3>
                <p>Наши операторы всегда на связи</p>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Контакты</h2>
            <p><i class="bi bi-geo-alt-fill"></i> Казань, проспект Ибрагимова, д.58</p>
            <p><i class="bi bi-telephone"></i> 8 800 555 35 35</p>
            <p><i class="bi bi-envelope"></i> ACRELIS@example.com</p>
            <p><i class="bi bi-clock"></i> Пн-Пт: 9:00–20:00<br>Сб-Вс: 10:00–18:00</p>
        </div>
        <div class="col-md-6">
            <h2>Где мы...</h2>
            <div id="yandex-map" style="width: 100%; height: 300px;"></div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        padding: 5rem 0;
        background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/hero-bg.jpg');
        background-size: cover;
        color: white;
        margin-bottom: 3rem;
    }
</style>

@section Scripts {
    <script src="https://api-maps.yandex.ru/2.1/?apikey=e2453ec0-c9f2-4f0e-b7c1-7e6709cda240&lang=ru_RU" type="text/javascript"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            ymaps.ready(init);

            function init() {
                var shopLocation = [55.820126, 49.095868];

                var map = new ymaps.Map("yandex-map", {
                    center: shopLocation,
                    zoom: 15,
                    controls: ['zoomControl', 'typeSelector']
                });

                var placemark = new ymaps.Placemark(shopLocation, {
                    hintContent: 'Мы находимся здесь',
                    balloonContent: 'Проспект Ибрагимова, д.58<br> Офис 102'
                }, {
                    iconLayout: 'default#image',
                    iconImageHref: 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/icons/shop.svg',
                    iconImageSize: [32, 32],
                    iconImageOffset: [-16, -32]
                });

                map.geoObjects.add(placemark);
                placemark.balloon.open();
            }
        });
    </script>
}
